<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <article class="card">
                    <div class="card-body">
                        <form action="">
                            <h5 class="card-title">Chỉnh sửa sản phẩm</h5>
                            <table class="table table-bordered">
                                <thead>
                                    <tr class="table-title">
                                        <td>Hình ảnh</td>
                                        <td>Tên sản phẩm</td>
                                        <td>Mô tả</td>
                                        <td>Giá</td>
                                        <td>Sửa</td>
                                        <td>Xóa</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each courses}}
                                    <tr>
                                        <td width="90"><img src="{{this.thumbnail}}" alt="" height="72" width="72"></td>
                                        <td style="padding-top: 30px; padding-bottom: 30px; font-size:15px;">{{this.name}}</td>
                                        <td style="padding-top: 30px; padding-bottom: 30px; font-size:15px;">{{this.mota}}</td>
                                        <td width="100" style="text-align: center; padding-top: 30px; padding-bottom: 30px;" name="Price">{{this.price}}</td>
                                        <td width="60" style="text-align: center; padding-top: 30px; padding-bottom: 30px;">
                                            <a href="/{{this._id}}"><i class="fa fa-edit"></i></a>
                                        </td>
                                        <td width="60" style="text-align: center; padding-top: 30px; padding-bottom: 30px;">
                                            <a href="#" data-toggle="modal" data-target="#delete-product" data-id="{{this._id}}"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </form>
                    </div>
                </article>
            </div>
        </div>
    </div>

    {{!--Modal delete--}}
    <div id="delete-product" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bạn chắc chắn muốn xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-footer">
                <button id="btn-delete-product" type="button" class="btn btn-danger">Xóa</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Thoát</button>
            </div>
            </div>
        </div>
    </div>

    {{!--Delete form--}}
    <form method="POST" name="delete-form"></form>

    <script>

        document.addEventListener("DOMContentLoaded", function() {
            var productID;
            var deleteform = document.forms['delete-form']
            var btndeleteproduct = document.getElementById('btn-delete-product')

            $('#delete-product').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget)
                productID = button.data('id')
            })

            btndeleteproduct.onclick = function (){
                deleteform.action = '/' + productID + '?_method=DELETE'
                deleteform.submit()
            }
        })
        
    </script>

</body>

