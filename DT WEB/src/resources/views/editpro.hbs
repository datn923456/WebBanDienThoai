<body>
  <div id="createpro" class="row">
    <div class="col-md-9">
      <article class="card" style="padding-right: 10px;">
        <div class="card-body">
            <h4>Cập nhật sản phẩm</h4>
            <br><br>
          
          <form method="POST" action="/{{course._id}}?_method=PUT">
            <div class="row">
              <div class="col-lg-12">
                <div class="row gx-3">
                  <div class="col-6 mb-3">
                    <label for="name">Tên sản phẩm</label>
                    <input type="text" class="form-control" value="{{course.name}}" name="name">
                  </div>
                  <div class="col-6 mb-3">
                    <label for="price">Giá sản phẩm</label>
                    <input type="text" class="form-control" value="{{course.price}}" name="price">
                  </div>
                  <div class="col-lg-6 col-md-6 mb-3">
                    <label for="mota">Mô tả sản phẩm</label>
                    <textarea class="form-control" name="mota">{{course.mota}}</textarea>
                  </div>
                  <div class="col-lg-6 col-md-6 mb-3">
                    <label for="thumbnail">Thumbnail</label>
                    <input type="text" class="form-control" value="{{course.thumbnail}}" name="thumbnail">
                  </div>
                  <hr>
                  <h5>Thông số kỹ thuật</h5>
                  <br><br>
                    <div class="col-lg-3 mb-3">
                        <label for="mh">Màn hình</label>
                        <input type="text" class="form-control" value="{{course.mh}}" name="mh">
                    </div>
                    <div class="col-lg-3 mb-3">
                        <label for="camS">Camera sau</label>
                        <input type="text" class="form-control" value="{{course.camS}}" name="camS">
                    </div>
                    <div class="col-lg-3 mb-3">
                        <label for="camT">Camera trước</label>
                        <input type="text" class="form-control" value="{{course.camT}}" name="camT">
                    </div>
                    <div class="col-lg-3 mb-3">
                        <label for="hdh">Hệ điều hành</label>
                        <input type="text" class="form-control" value="{{course.hdh}}" name="hdh">
                    </div>
                    <div class="col-lg-3 mb-3">
                        <label for="chip">Chip</label>
                        <input type="text" class="form-control" value="{{course.chip}}" name="chip">
                    </div>
                    <div class="col-lg-3 mb-3">
                        <label for="memory">Bộ nhớ trong</label>
                        <input type="text" class="form-control" value="{{course.memory}}" name="memory">
                    </div>
                    <div class="col-lg-3 mb-3">
                        <label for="ram">RAM</label>
                        <input type="text" class="form-control" value="{{course.ram}}" name="ram">
                    </div>
                </div>
              </div>

            </div>
            <br>
            <button class="btn btn-primary" type="submit">Lưu</button>
          </form>

        </div>
      </article>
    </div>
  </div>
</body>

